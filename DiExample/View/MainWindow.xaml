<Window x:Class="DiExample.View.MainWindow"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="269" Width="487">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Message}" TextAlignment="Center"/>
            <Button Content="Показать сообщение" Command="{Binding LoadMessageCommand}" Margin="10"/>
            <Button Content="Открыть второе окошко" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
